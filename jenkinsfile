pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-repo/your-project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('your-image-name')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    def app = docker.image('your-image-name')
                    app.run('-p 80:80')
                }
            }
        }
    }
}
