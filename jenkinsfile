pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git branch: 'main', url: 'git@github.com:Asadmahmand/test1.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // If you need to install any dependencies or run any build steps, you can add them here
                    // For an HTML project, there might not be a build step, so this stage can be empty or used for linting
                    echo 'No build steps for a static HTML project'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // If you have any tests to run, add them here
                    // For an HTML project, this might involve running some kind of HTML validation or link checking
                    echo 'No tests for a static HTML project'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy steps can vary depending on your environment
                    // You might copy files to a web server, upload to S3, etc.
                    echo 'Deploying the HTML files'
                    // Example: sh 'scp -r * user@yourserver:/var/www/html/'
                }
            }
        }
    }

    post {
        always {
            // Perform clean-up steps, send notifications, etc.
            echo 'Cleaning up workspace'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
